<h1>followers list</h1>

<div class="row">
   <aside class="col-md-4">
      <section class="user_info">
         <%= render 'shared/user_info' %>
      </section>
   </aside>
   <div class="col-md-8">
      <% @follower.each do |user| %>
         <%= gravatar_for(user, size:30) %>
         <%= link_to user.name, user_path(user.id) %>
      <% end %>      
   </div>
</div>

